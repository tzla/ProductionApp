<ContentDialog
    x:Class="ProductionApp.ContentDialog1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App6"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="TITLE"
    PrimaryButtonText="Button1"
    
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    
     FontFamily="Segoe UI">

    <Grid HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center" Width="405">
        <StackPanel x:Name="StringPanel" HorizontalAlignment="Left" Height="44" VerticalAlignment="Center" Width="300"/>
        <StackPanel x:Name="ButtonPanel" HorizontalAlignment="Left" Height="44" VerticalAlignment="Center" Width="100" Margin="300,0,0,0" Orientation="Horizontal">
            <StackPanel x:Name="EditPan" HorizontalAlignment="Center" VerticalAlignment="Center" Width="40"/>
            <StackPanel x:Name="DelPan" HorizontalAlignment="Left" VerticalAlignment="Center" Width="60"/>
        </StackPanel>
    </Grid>
</ContentDialog>
